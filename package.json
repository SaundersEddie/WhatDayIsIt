{
  "name": "whatdayisit",
  "version": "1.0.0",
  "description": "National Day of lookup",
  "main": "server/server.js",
  "type": "module",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node server/server.js",
    "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"npm run client\"",
    "client": "cd client && npm run start",
    "install": "cd client && npm install",
    "build": "cd client && npm run build",
    "heroku-postbuild": "npm run build"
  },
  "engines": {
    "node": "14.15.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SaundersEddie/WhatDayIsIt.git"
  },
  "author": "Eddie Saunders",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/SaundersEddie/WhatDayIsIt/issues"
  },
  "homepage": "https://github.com/SaundersEddie/WhatDayIsIt#readme",
  "dependencies": {
    "concurrently": "^5.3.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-router": "0.0.1",
    "if-env": "^1.0.4",
    "mongodb": "^3.6.2",
    "mongoose": "^5.10.9",
    "node": "^14.12.0",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "nodemon": "^2.0.6"
  }
}
